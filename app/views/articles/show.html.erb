<div class="container w-50 d-flex flex-column" style="min-height: 250px;">
  <div class="d-flex justify-content-between mt-2">
    <h2><%= @article.title %></h2>
    <div class="d-flex">
      <%= link_to edit_article_path, class: "btn btn-outline-primary me-1 align-self-center" do %>
        <i class="fa-regular fa-pen-to-square"></i>
      <% end  %>
      <%= link_to article_path(@article), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "me-1 btn btn-outline-danger align-self-center" do %>
        <i class="fa-solid fa-trash-can"></i>
      <% end %>
    </div>
  </div>
  <div class="mt-3">
    <%= @article.content%>
  </div>
  <div class="mt-auto">
    <%= link_to "Go back to the articles", articles_path, class: "mt-3 btn btn-outline-secondary" %>
  </div>
</div>
